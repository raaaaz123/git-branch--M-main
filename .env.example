# Qdrant Configuration
QDRANT_URL=https://your-cluster.gcp.cloud.qdrant.io:6333
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_COLLECTION_NAME=rexa-engage

# OpenAI Configuration (Required for GPT models)
OPENAI_API_KEY=your-openai-api-key

# Google Gemini Configuration (Required for Gemini models)
GOOGLE_API_KEY=your-google-api-key

# Voyage AI Configuration (For embeddings and reranking)
VOYAGE_API_KEY=your-voyage-api-key

# OpenRouter Configuration (Legacy - being phased out)
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_SITE_URL=http://localhost:3000
OPENROUTER_SITE_NAME=Rexa CRM

# Cloudflare R2 Storage Configuration
R2_ACCOUNT_ID=your-r2-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=rexa-documents
R2_PUBLIC_URL=https://your-custom-domain.com  # Optional: Custom domain for R2

# Firebase Admin SDK (for Firestore)
# Add your Firebase service account JSON path or credentials
FIREBASE_PROJECT_ID=rexa-engage

# Notion OAuth Integration
NOTION_CLIENT_ID=your-notion-oauth-client-id
NOTION_CLIENT_SECRET=your-notion-oauth-client-secret
NOTION_REDIRECT_URI=http://localhost:3000/api/notion/callback

# Calendly OAuth Integration
CALENDLY_CLIENT_ID=your-calendly-oauth-client-id
CALENDLY_CLIENT_SECRET=your-calendly-oauth-client-secret
CALENDLY_REDIRECT_URI=http://localhost:3001/api/calendly/callback

# Server Configuration
HOST=0.0.0.0
PORT=8001

# CORS Configuration (optional - comma-separated list)
ALLOWED_ORIGINS=http://localhost:3000,https://your-production-domain.com
